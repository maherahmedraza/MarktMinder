# MarktMinder Scraper Configuration

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/marktminder

# Redis (for job queue)
REDIS_URL=redis://localhost:6379

# Scraping Settings
SCRAPE_CONCURRENCY=3
SCRAPE_DELAY_MS=2000
SCRAPE_TIMEOUT_MS=30000
SCRAPE_RETRY_ATTEMPTS=3

# Proxy Configuration (optional)
PROXY_ENABLED=false
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# Rate Limits (requests per minute)
RATE_LIMIT_AMAZON=20
RATE_LIMIT_ETSY=30
RATE_LIMIT_OTTO=25

# Etsy API (optional - for official API access)
ETSY_API_KEY=
ETSY_API_SECRET=

# Logging
LOG_LEVEL=info
